{
  "compilerOptions": {
      "target": "EsNext",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "rootDir": ".",
      "sourceMap": true,
      "listFiles": true,
      "newLine": "LF",
      "noEmitOnError": true,
      "jsx": "react",
      "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}